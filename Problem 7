#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	int number;
	int a;
	int sum=0;
	
	cout<<" ___________________________________"<<endl;
	cout<<"|                                   |"<<endl;
	cout<<"|      SUM OF ALL WHOLE NUMBERS     |"<<endl;
	cout<<"|        UP TO A GIVEN NUMBER       |"<<endl;
	cout<<"|___________________________________|"<<endl<<endl;
	
	
	do
	{
		cout<<endl<<"Enter Number: ";
		cin>>number;
		
		if (number == 0)
		{
			cout<<endl<<"_________________"<<endl;
			cout<<endl<<"  BYE BYE! :(";
			cout<<endl<<"_________________";
			return 0;
		}
		else
		{
			for(a=1; a<=number; a++)
			{
				sum=sum+ a;	
			}
			
			cout<<"The sum of numbers from 1 up to "<<number<<" is... "<<sum;
			cout<<endl<<"_____________________________________________"<<endl;
			
			sum = 0;
		}
		
	}
	while (!0);

	
	_getch();
	return 0;
}
