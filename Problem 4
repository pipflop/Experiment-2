#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	double num1;
	double num2;
	double num3;
	
	cout<<" _____________________________"<<endl;
	cout<<"|                             |"<<endl;
	cout<<"|      IN SEARCH FOR THE      |"<<endl;
	cout<<"|       LARGEST NUMBER        |"<<endl;
	cout<<"|_____________________________|"<<endl;
	
	cout<<endl<<endl<<"Enter Number 1: ";
	cin>>num1;
	
	cout<<"Enter Number 2: ";
	cin>>num2;
	
	cout<<"Enter Number 3: ";
	cin>>num3;
	
	cout<<endl<<"_____________________________________________"<<endl;
	
	if (num1 >= num2 && num1 >= num3)
	{
		cout<<endl<<"The LARGEST number among the three is "<<num1;
	}
	else if (num2 >= num1 && num2 >= num3)
	{
		cout<<endl<<"The LARGEST number among the three is "<<num2;
	}
	else
	{
		cout<<endl<<"The LARGEST number among the three is "<<num3;
	}
	
	cout<<endl<<"_____________________________________________";
	
	_getch();
	return 0;
}
